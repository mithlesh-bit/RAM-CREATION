    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const openBtn = document.querySelector(".openbtn");
            openBtn.addEventListener("click", function () {
                const modal = new bootstrap.Modal(
                    document.getElementById("imageUploadModal")
                );
                modal.show();
            });
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("imageUploadForm");
            const url = window.location.href;
            const dynamicData = extractDynamicData(url);

            form.addEventListener("submit", function (event) {
                event.preventDefault(); // Prevent the default form submission behavior

                const formData = new FormData(form);
                formData.append("dynamicData", dynamicData); // Append dynamic data to the form data

                fetch("/admin/addData/moredata", {
                    method: "POST",
                    body: formData,
                })
                    .then((response) => response.json())
                    .then((data) => {
                        if (data.success) {
                            // If the update was successful, show a success message and close the modal
                            Swal.fire({
                                icon: "success",
                                title: "Post Updated",
                                text: data.message,
                            }).then(() => {
                                `window.location.href = /admin/more/${dynamicData}`;
                            });
                        } else {
                            // If there was an error, display an error message
                            Swal.fire({
                                icon: "error",
                                title: "Update Failed",
                                text: data.message,
                            });
                        }
                    })
                    .catch((error) => {
                        // Handle any errors that occurred during the fetch request
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: "Failed to update the post",
                        });
                    });
            });

            function extractDynamicData(url) {
                // Implement the logic to extract dynamic data from the URL
                // For example, if the dynamic data is in the path, you can use regex or split
                const parts = url.split("/");
                return parts[parts.length - 1];
            }
        });
    </script>

    <script>
        function deleteImage(imageId) {
            // Display a confirmation dialog
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, delete it!",
            }).then((result) => {
                if (result.isConfirmed) {
                    // Make API request to delete image
                    fetch(`/admin/deleteImage/${imageId}`, {
                        method: "DELETE",
                        headers: {
                            "Content-Type": "application/json",
                        },
                    })
                        .then((response) => response.json())
                        .then((data) => {
                            if (data.success) {
                                // If the deletion was successful, show a success message
                                Swal.fire({
                                    icon: "success",
                                    title: "Image Deleted",
                                    text: data.message,
                                }).then(() => {
                                    // Reload the page or update the content dynamically
                                    window.location.reload();
                                });
                            } else {
                                // If there was an error, display an error message
                                Swal.fire({
                                    icon: "error",
                                    title: "Deletion Failed",
                                    text: data.message,
                                });
                            }
                        })
                        .catch((error) => {
                            // Handle errors during the fetch
                            console.error("Fetch error:", error);
                        });
                }
            });
        }
    </script>
