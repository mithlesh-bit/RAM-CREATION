    <!-- Add this modal HTML at the end of your body -->
    <div class="modal fade" id="imageUploadModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Upload Image</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Your image upload form goes here -->
                    <form id="imageUploadForm">
                        <label for="image">Choose Image:</label>
                        <input type="text" name="thumbnail_id" id="thumbnail_id" placeholder="enter heading">
                        <input type="text" name="amount" id="amount" placeholder="enter heading">
                        <input type="file" name="image" id="image" accept="image/*">

                        <button type="button" class="btn btn-primary" onclick="uploadImage()">Upload</button>
                    </form>
                </div>
            </div>
        </div>
    </div>



